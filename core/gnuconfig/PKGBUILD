pkgname=gnuconfig
pkgver=20110814
pkgrel=1
pkgdesc="Updated config.sub and config.guess file from GNU"
arch=('any')
url="http://savannah.gnu.org/projects/config"
license=('GPL2')
groups=('base-devel')
package() {
  cd "${srcdir}"
  install -D -m0644 config.guess "${pkgdir}"/usr/share/gnuconfig/config.guess
  install -D -m0644 config.sub "${pkgdir}"/usr/share/gnuconfig/config.sub
}
source=($pkgname-$pkgver.tar.bz2)
sha256sums=('2b2292afb1f23dcc289bd2260e3dc5620d8d71f044590144772b31a21afd5013')



