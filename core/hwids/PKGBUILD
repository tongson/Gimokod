# Based upon the PKGBUILD from Arch Linux
pkgname=hwids
pkgver=20120512
pkgrel=1
pkgdesc="hardware identification databases"
url=https://github.com/Flameeyes/hwids
license=('GPL2')
arch=('any')
groups=('base')
source=("Flameeyes-hwids-hwids-20120512-0-g5228ef3.tar.gz::https://github.com/Flameeyes/${pkgname}/tarball/${pkgname}-${pkgver}")

package() {
  cd ${srcdir}/*
  mkdir -p "${pkgdir}/usr/share/hwdata"
  cp pci.ids usb.ids "${pkgdir}/usr/share/hwdata/"
}
md5sums=('d530009df4967b5ece996262f4e39851')
