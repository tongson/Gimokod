[Unit]
Description=Static IP configuration

[Service]
Type=oneshot
EnvironmentFile=/etc/conf.d/net
ExecStart=/sbin/ip addr flush dev ${interface} scope global
ExecStart=/sbin/ip addr add ${address}/${netmask} dev ${interface}
ExecStart=/sbin/ip route add default via ${gateway}

[Install]
WantedBy=network.target
