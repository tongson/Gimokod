pkgname=systemd-units
pkgver=2012.02
pkgrel=1
pkgdesc="Systemd units for the base system"
arch=('any')
url="http://localhost.localdomain"
license=('LGPL3')
groups=('base')
install=systemd-units.install

package() {
  cd ${srcdir}
  for s in *.service ; do
    install -D -m0644 ${s} "${pkgdir}/usr/lib/systemd/system/${s}"
  done
}

source=(${source[@]-}
        colorum.service
        crond.service
        lvm2.service
        network-dhcp@.service
        network-gateway.service
        network-lxc.service
        network-static@.service
        nscd.service
        ntpd.service
        remountrw.service
        rngd.service
        sshd.service
        sync.service)

