pkgname=systemd-units
pkgver=2011.09
pkgrel=1
pkgdesc="Systemd units for the base system"
arch=('any')
url="http://localhost.localdomain"
license=('ISC')
groups=('base')
install=systemd-units.install
package() {
  cd ${srcdir}
  for s in *.service ; do
    install -D -m0644 ${s} "${pkgdir}/lib/systemd/system/${s}"
  done
}

source=(${source[@]-}
        crond.service
        klogd.service
        lvm2.service
        network-dhcp.service
        network-lxc.service
        network-static.service
        nscd.service
        ntpd.service
        remountrw.service
        rngd.service
        sshd.service
        sync.service
        syslogd.service)

