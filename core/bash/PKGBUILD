# Based upon the PKGBUILD from Arch Linux
pkgname=bash
_basever=4.2
_patchlevel=024 #prepare for some patches
pkgver=$_basever.$_patchlevel
pkgrel=1
pkgdesc="The GNU Bourne Again shell"
arch=('x86_64')
license=('GPL')
depends=('ncurses')
url="http://www.gnu.org/software/bash/bash.html"
groups=('base')
install=bash.install
source=(http://ftp.gnu.org/gnu/bash/bash-$_basever.tar.gz{,.sig}
        dot.bashrc
        dot.bash_logout
        system.bashrc
        system.bash_logout)
if [ $_patchlevel -gt 000 ]; then
  for (( p=1; p<=$((10#${_patchlevel})); p++ )); do
      source=(${source[@]}
      http://ftp.gnu.org/gnu/bash/bash-$_basever-patches/bash${_basever//./}-$(printf "%03d" $p){,.sig})
  done
fi

build() {
  cd "${srcdir}"/${pkgname}-$_basever
  for (( p=1; p<=$((10#${_patchlevel})); p++ )); do
    msg "applying patch bash${_basever//./}-$(printf "%03d" $p)"
    patch -Np0 -i $srcdir/bash${_basever//./}-$(printf "%03d" $p)
  done
  _bashconfig=(-DDEFAULT_PATH_VALUE=\'\"/usr/bin\"\'
              -DSTANDARD_UTILS_PATH=\'\"/usr/bin\"\'
              -DSYS_BASHRC=\'\"/etc/bash/bashrc\"\'
              -DSYS_BASH_LOGOUT=\'\"/etc/bash/bash_logout\"\')
  export CFLAGS="${CFLAGS} ${_bashconfig[@]}"
  ./configure --prefix=/usr \
              --build=${CBUILD} \
              --host=${CHOST} \
              --with-curses \
              --disable-nls \
              --without-bash-malloc \
              --without-installed-readline \
              --bindir=/usr/bin \
              --mandir=/usr/share/man
  make
}

package() {
  cd "${srcdir}"/${pkgname}-$_basever
  make DESTDIR="${pkgdir}" install
  install -d -m0755 "${pkgdir}"/etc/skel/
  install -D -m0644 "${srcdir}"/system.bashrc "${pkgdir}"/etc/bash/bashrc
  install -D -m0644 "${srcdir}"/system.bash_logout "${pkgdir}"/etc/bash/bash_logout
  install -m0644 "${srcdir}"/dot.bashrc "${pkgdir}"/etc/skel/.bashrc
  install -m0644 "${srcdir}"/dot.bash_logout "${pkgdir}"/etc/skel/.bash_logout
}

