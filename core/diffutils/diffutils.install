post_install() {
  /usr/bin/alternatives --install /usr/bin/diff diff /usr/bin/gdiff 10
  /usr/bin/alternatives --install /usr/bin/cmp cmp /usr/bin/gcmp 10
}

post_upgrade() {
  post_install
}

post_remove() {
  /usr/bin/alternatives --remove diff /usr/bin/gdiff
  /usr/bin/alternatives --remove cmp /usr/bin/gcmp
}
