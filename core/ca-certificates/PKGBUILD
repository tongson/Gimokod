pkgname=ca-certificates
pkgver=20110502+nmu1
pkgrel=1
pkgdesc='Common CA certificates'
arch=('any')
url='http://packages.qa.debian.org/c/ca-certificates.html'
license=('MPL' 'GPL')
groups=('base')
depends=('openssl')
makedepends=('openssl' 'run-parts')
install=ca-certificates.install
backup=('etc/ca-certificates.conf')

build() {
  cd ${srcdir}
  mkdir ${pkgname}-${pkgver}
  cd ${pkgname}-${pkgver}
  tar -xzf ../data.tar.gz
  cd ..
  rm control.tar.gz  data.tar.gz  debian-binary
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  cp -pPR * "${pkgdir}"/
  (
  echo "# Automatically generated by ${pkgname}-${pkgver}-${pkgrel}"
  echo "# $(date -u)"
  cd "${pkgdir}"/usr/share/ca-certificates
  find . -name '*.crt' | LC_ALL=C sort | cut -b3-
  ) > "${pkgdir}"/etc/ca-certificates.conf
}
source=("http://ftp.debian.org/debian/pool/main/c/${pkgname}/${pkgname}_${pkgver}_all.deb")

sha256sums=('d44284ee9b733b9890a54516f66b68a382ac5fb2c0bdceafed4cf229aa3b05a1')


