pkgname=pax-utils
pkgver=0.4
pkgrel=1
pkgdesc="ELF related utils for ELF 32/64 binaries that can check files for security relevant properties"
arch=('x86_64')
url="http://hardened.gentoo.org/pax-utils.xml"
license=('GPL')
groups=('base-devel')
depends=('libcap')
makedepends=('libcap')
source=(http://dev.gentoo.org/~vapier/dist/${pkgname}-${pkgver}.tar.xz)
sha256sums=('2a19285f5793fa30a6540ae67511cd5dabd543cc11130dd2eb741edfd2fc1e7f')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  make CC=gcc USE_CAP=yes
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
}

