# Based upon the PKGBUILD from Arch Linux
pkgname=tzcode
pkgver=2012b
pkgrel=1
pkgdesc="Sources for time zone and daylight saving time data"
arch=('x86_64')
url="http://www.iana.org/time-zones"
license=('GPL')
groups=('base')
options=('!emptydirs')
source=(ftp://munnari.oz.au/pub/${pkgname}${pkgver}.tar.gz
        yearistype.sh
        Makefile.patch)
md5sums=('6137322ffd36e1fd5128885be1c57008'
         '3163ce661cfbbc2de59b2a54ab6b8391'
         'a64ed97d1fc03c66ee8612c0d9f40507')
build() {
  cd ${srcdir}
  tar -xf tzcode${pkgver}.tar.gz
  Patch Makefile.patch
  export CC=/usr/bin/gcc
  export NLS=0
  make
}

package() {
  cd ${srcdir}
  for x in tzselect zic zdump yearistype ; do
      install -Dm0755 $x "${pkgdir}/usr/bin/$x"
  done
}
