# Based upon the PKGBUILD from Arch Linux
pkgname=autogen
pkgver=5.12
pkgrel=1
pkgdesc="Tool for the creation and maintenance of programs that contain large amounts of repetitious text"
arch=('x86_64')
url="http://www.gnu.org/software/autogen/"
license=('GPL3')
groups=('base-devel')
depends=('guile')
options=('!libtool')
source=(http://ftp.gnu.org/gnu/${pkgname}/rel${pkgver}/${pkgname}-${pkgver}.tar.xz{,.sig})
md5sums=('5fba3c0e1ec0965061f27e8e79bd6da2'
         'ed74e586ade1a61f753d391f3849c25b')


build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  sed -i '1128s:$(top_srcdir)/pkg/libopts/mklibsrc.sh:-c 'true':' autoopts/Makefile.in
  sed -i '321s:libopts-@AO_CURRENT@.@AO_REVISION@.@AO_AGE@.tar.gz::' autoopts/Makefile.in
  ./configure --prefix=/usr \
              --build=${CBUILD} \
              --host=${CHOST}
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
  mkdir "${pkgdir}/usr/lib/pkgconfig"
  mv "${pkgdir}/usr/share/pkgconfig/autoopts.pc" "${pkgdir}/usr/lib/pkgconfig/autoopts.pc"
  rmdir "${pkgdir}/usr/share/pkgconfig"
}
