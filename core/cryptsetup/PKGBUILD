pkgname=cryptsetup
pkgver=1.4.0
pkgrel=1
pkgdesc='Userspace setup tool for transparent encryption of block devices'
arch=(i686 x86_64)
url='http://code.google.com/p/cryptsetup/'
license=('GPL')
groups=('base')
depends=('device-mapper' 'popt' 'openssl' 'udev')
makedepends=('device-mapper' 'popt' 'openssl' 'udev' 'pkg-config')
options=('!libtool' '!emptydirs')
build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  Patch cryptsetup-fix-crypt_get_volume_key_size-for-plain-device.patch
  ./configure --prefix=/usr \
              --build=${CBUILD} \
              --host=${CHOST} \
              --enable-static-cryptsetup \
              --sbindir=/usr/bin \
              --libdir=/usr/lib \
              --disable-nls \
              --enable-udev \
              --enable-dev-random \
              --with-crypto_backend=openssl \
              --disable-selinux
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}

source=(http://cryptsetup.googlecode.com/files/${pkgname}-${pkgver}.tar.bz2
        cryptsetup-fix-crypt_get_volume_key_size-for-plain-device.patch)

sha256sums=('96d682853c8019cfeae0b21250cd2d00af42e46251807e8dbda2ff8427c2e9ed'
            '6fa1d3172014ba3ba96f7a67acbcae7f26b24a61abb84b3917f526a54f81dd87')
