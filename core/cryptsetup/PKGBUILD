pkgname=cryptsetup
pkgver=1.4.2
pkgrel=2
pkgdesc='Userspace setup tool for transparent encryption of block devices'
arch=('x86_64')
url='http://code.google.com/p/cryptsetup/'
license=('GPL')
groups=('base')
depends=('device-mapper' 'popt' 'openssl' 'udev' 'zlib')
makedepends=('device-mapper' 'popt' 'openssl' 'udev' 'pkg-config')
options=('!libtool' '!emptydirs')
build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr \
              --build=${CBUILD} \
              --host=${CHOST} \
              --disable-static-cryptsetup \
              --sbindir=/usr/bin \
              --libdir=/usr/lib \
              --disable-nls \
              --enable-udev \
              --enable-dev-random \
              --with-crypto_backend=openssl \
              --disable-selinux
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}

source=(http://cryptsetup.googlecode.com/files/${pkgname}-${pkgver}.tar.bz2
        http://cryptsetup.googlecode.com/files/${pkgname}-${pkgver}.tar.bz2.asc)
sha256sums=('1fe80d7b19d24b3f65d2e446decfed859e2c4d17fdf7c19289d82dc7cd60dfe7'
            '4e6dbece8d1baad861479aca70d0cf30887420da9b5eab45d65d064c656893ed')

