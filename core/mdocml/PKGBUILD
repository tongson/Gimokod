pkgname=mdocml
pkgver=1.12.1
pkgrel=1
pkgdesc="mdoc macro compiler"
url="http://mdocml.bsd.lv/"
arch=('x86_64')
license="BSD"
groups=('base')
source=(http://mdocml.bsd.lv/snapshots/mdocml-$pkgver.tar.gz)
sha256sums=('12a756cd2901954bccdd25819a16d0ab0501c32c87ad7973570cd65608d32891')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make PREFIX=/usr DBBIN=
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  make DESTDIR="${pkgdir}" PREFIX=/usr MANDIR=/usr/share/man DBBIN= \
    EXAMPLEDIR=/usr/share/doc/mdocml/examples install
}

