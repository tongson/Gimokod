# Based upon the PKGBUILD from Arch Linux
pkgname=gohufont
pkgver=2.0
pkgrel=1
pkgdesc='A bitmap font for programming and terminal use, in two sizes'
arch=(any)
url=http://font.gohu.eu/
license=(custom:WTFPL)
makedepends=('xorg-mkfontdir' 'xorg-mkfontscale')
source=(http://font.gohu.eu/"${pkgname}"-"${pkgver}".tar.gz)
md5sums=('f57ed4493447f9c74f53bb8aa27eae7c')

package() {
  cd "${srcdir}"/"${pkgname}"-"${pkgver}"
  install -Dm644 gohufont-11b.pcf.gz "${pkgdir}"/usr/share/fonts/gohufont/gohufont-11b.pcf.gz
  install -Dm644 gohufont-11.pcf.gz "${pkgdir}"/usr/share/fonts/gohufont/gohufont-11.pcf.gz
  install -Dm644 gohufont-uni-11b.pcf.gz "${pkgdir}"/usr/share/fonts/gohufont/gohufont-uni-11b.pcf.gz
  install -Dm644 gohufont-uni-11.pcf.gz "${pkgdir}"/usr/share/fonts/gohufont/gohufont-uni-11.pcf.gz
  install -Dm644 gohufont-14b.pcf.gz "${pkgdir}"/usr/share/fonts/gohufont/gohufont-14b.pcf.gz
  install -Dm644 gohufont-14.pcf.gz "${pkgdir}"/usr/share/fonts/gohufont/gohufont-14.pcf.gz
  install -Dm644 gohufont-uni-14b.pcf.gz "${pkgdir}"/usr/share/fonts/gohufont/gohufont-uni-14b.pcf.gz
  install -Dm644 gohufont-uni-14.pcf.gz "${pkgdir}"/usr/share/fonts/gohufont/gohufont-uni-14.pcf.gz
  install -Dm644 COPYING-LICENSE "${pkgdir}"/usr/share/licenses/"${pkgname}"/COPYING-LICENSE
  mkfontscale "${pkgdir}/usr/share/fonts/gohufont"
  mkfontdir "${pkgdir}/usr/share/fonts/gohufont"
}
