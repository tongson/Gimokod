@@ -312,9 +312,9 @@ GfxInfo::GetFeatureStatusImpl(PRInt32 aFeature,
     }
 
     if (mIsMesa) {
-        if (mIsNouveau) {
+        if (mIsNouveau && version(mMajorVersion, mMinorVersion) < version(8,0)) {
             *aStatus = nsIGfxInfo::FEATURE_BLOCKED_DRIVER_VERSION;
