# Based upon the PKGBUILD from Arch Linux
pkgname=libxmu
pkgver=1.1.0
pkgrel=1
pkgdesc="X11 miscellaneous micro-utility library"
arch=('i686' 'x86_64')
url="http://xorg.freedesktop.org/"
depends=('libxext' 'libxt')
makedepends=('xorg-util-macros')
license=('custom')
options=('!libtool')
source=(${url}/releases/individual/lib/libXmu-${pkgver}.tar.bz2)
sha1sums=('81876a0848070bfc4476a2538fc16898eb6d96cd')

build() {
  cd "${srcdir}/libXmu-${pkgver}"
  ./configure --prefix=/usr --sysconfdir=/etc --disable-static --without-fop --without-xmlto --disable-docs --enable-ipv6
  make
}

package() {
  cd "${srcdir}/libXmu-${pkgver}"
  make DESTDIR="${pkgdir}" install

  install -m755 -d "${pkgdir}/usr/share/licenses/${pkgname}"
  install -m644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/"
}
