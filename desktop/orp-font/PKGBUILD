pkgname=orp-font
_pkgname=MicahElliott-Orp-Font
pkgver=1.0
_pkgver=a450a6f
pkgrel=1
pkgdesc="A monospaced bitmap font for the console and X11"
arch=('any')
url="https://github.com/MicahElliott/Orp-Font"
license=('custom')
source=(https://github.com/MicahElliott/Orp-Font/${_pkgname}-${_pkgver}.tar.gz)
sha256sums=('a4bc43f53a1ea5d11b9b28f02a288800167d4142a3ce6859f1eb3216ac3da128')

package () {
  cd "${srcdir}/${_pkgname}-${_pkgver}/misc"
  install -d "${pkgdir}/usr/share/fonts/orp-font"
  install * -m0644 "${pkgdir}/usr/share/fonts/orp-font"
}
