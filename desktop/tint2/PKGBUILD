# Based upon the PKGBUILD from Arch Linux
pkgname=tint2
pkgver=0.11
pkgrel=1
pkgdesc="A basic, good-looking task manager for WMs"
arch=('x86_64')
url="http://code.google.com/p/tint2/"
license=('GPL2')
depends=('glib' 'cairo' 'pango' 'libx11'  'imlib2' 'libxinerama' 'libxdamage'
         'libxcomposite' 'libxrender' 'libxrandr')
makedepends=('cmake' 'pkg-config' 'xineramaproto')
source=("http://"${pkgname}".googlecode.com/files/"${pkgname}"-${pkgver}.tar.bz2"
        'add-power-now-support.patch')
md5sums=('6fc5731e7425125fa84a2add5cef4bff'
         '6cfcad028f1bd2f69812167f5395f890')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  Patch add-power-now-support.patch
  [ -d build ] || mkdir build
  cd build
  cmake -DDOCDIR=/usr/share/doc/tint2 -DCMAKE_INSTALL_PREFIX=/usr ../
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}/build"
  make DESTDIR="${pkgdir}" install
  rm "${pkgdir}/usr/bin/tintwizard.py"
}
