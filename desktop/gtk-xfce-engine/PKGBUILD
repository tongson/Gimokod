# Based upon the PKGBUILD from Arch Linux
pkgname=gtk-xfce-engine
pkgver=2.99.1
pkgrel=1
pkgdesc="Xfce Gtk+-2.0 and Gtk+-3.0 engines"
arch=('i686' 'x86_64')
license=('GPL2')
url="http://www.xfce.org/"
depends=('gtk2' 'gtk3')
makedepends=('pkg-config')
options=('!libtool')
source=(http://archive.xfce.org/src/xfce/${pkgname}/2.99/${pkgname}-${pkgver}.tar.bz2)
sha256sums=('077a3d68bb560371af902d4aa35ad949c70974e923ecdf2ec946801a480dece2')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr \
              --host=${CHOST} \
              --build=${CBUILD} \
              --sysconfdir=/etc \
              --libexecdir=/usr/lib \
              --localstatedir=/var \
              --disable-static \
              --disable-debug
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
make DESTDIR="${pkgdir}" install
}
