# Based upon the PKGBUILD from Arch Linux
pkgname=gifsicle
pkgver=1.64
pkgrel=1
pkgdesc='A tool for creating, editing, manipulating and getting info from GIF animations'
arch=('i686' 'x86_64')
url="http://www.lcdf.org/gifsicle/"
license=('GPL')
depends=('libx11' 'libxt')
source=(http://www.lcdf.org/${pkgname}/${pkgname}-${pkgver}.tar.gz)
sha1sums=('14f1f69d41287eb06d69ae98b672a0f8c5cf28e5')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr \
              --build=${CBUILD} \
              --host=${CHOST}
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}
