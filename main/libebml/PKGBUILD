# Based upon the PKGBUILD from Arch Linux
pkgname=libebml
pkgver=1.2.2
pkgrel=2
pkgdesc="Extensible Binary Meta Language library"
arch=('x86_64')
url="http://dl.matroska.org/downloads/libebml/"
license=('LGPL')
depends=('gcc-libs')
source=("http://dl.matroska.org/downloads/${pkgname}/${pkgname}-${pkgver}.tar.bz2"
        'libebml-1.2.0-makefile-fixup.patch')
md5sums=('726cc2bd1a525929ff35ff9854c0ebab'
         '7d0ec152e25abf4b4257876b3df83ec3')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}/make/linux"
  Patch libebml-1.2.0-makefile-fixup.patch
  sed -i -e "s:\(DEBUGFLAGS=\)-g :\1:" Makefile
  make prefix=/usr DEBUG=no
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}/make/linux"
  make DESTDIR="${pkgdir}" prefix="/usr" libdir="/usr/lib" install
}
