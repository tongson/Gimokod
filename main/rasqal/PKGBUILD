# Based upon the PKGBUILD from Arch Linux
pkgname=rasqal
pkgver=0.9.28
pkgrel=2
pkgdesc="library that handles RDF query syntaxes/construction/execution"
url="http://librdf.org/rasqal"
license=('GPL' 'LGPL')
arch=('x86_64')
depends=('raptor' 'mpfr')
options=('!libtool')
source=(http://download.librdf.org/source/${pkgname}-${pkgver}.tar.gz)
md5sums=('a3662b8d9efef9d8ef0a3c182450fba2')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr \
              --build=${CBUILD} \
              --host=${CHOST} \
              --disable-static \
              --enable-release \
              --with-regex-library=posix \
              --with-digest-library=internal \
              --with-decimal=mpfr \
              --disable-pcre
  make
}

check() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make -k check || true 
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}
