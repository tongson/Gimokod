# Based upon the PKGBUILD from Arch Linux
pkgname=ffmpeg
pkgver=20120111
pkgrel=1
pkgdesc="Complete and free Internet live audio and video broadcasting solution for Linux/Unix"
arch=('i686' 'x86_64')
url="http://ffmpeg.org/"
license=('GPL')
depends=('bzip2' 'vo-aacenc' 'lame' 'libvorbis' 'xvidcore' 'zlib' 'x264' 'libtheora'
         'schroedinger' 'speex' 'libvpx' 'openjpeg' 'rtmpdump')
makedepends=('yasm')
source=(ftp://ftp.archlinux.org/other/ffmpeg/${pkgname}-${pkgver}.tar.xz
        revert-enabling-threads.patch)
md5sums=('7a54b2b1af86a746696d1c0b2a79979c'
         '79cc22bc2ac3e67d96c340cb7061e64d')

build() {
  cd "${srcdir}/${pkgname}"
  patch -Np1 -R -i "${srcdir}/revert-enabling-threads.patch"
  ./configure \
    --prefix=/usr \
    --enable-libmp3lame \
    --enable-libvorbis \
    --enable-libxvid \
    --enable-libx264 \
    --enable-libvo-aacenc \
    --enable-libvpx \
    --enable-libspeex \
    --enable-libtheora \
    --enable-postproc \
    --enable-shared \
    --enable-avfilter \
    --disable-stripping \
    --disable-vdpau \
    --enable-libschroedinger \
    --disable-libfaac \
    --disable-libopencore_amrnb \
    --disable-libopencore_amrwb \
    --enable-libopenjpeg \
    --enable-librtmp \
    --enable-libfreetype \
    --enable-gpl \
    --enable-version3 \
    --enable-runtime-cpudetect \
    --enable-hardcoded-tables \
    --disable-vaapi \
    --disable-indev=oss \
    --disable-indev=jack \
    --disable-indev=dv1394 \
    --disable-indev=v4l \
    --disable-outdev=oss \
    --disable-outdev=alsa \
    --disable-outdev=sdl \
    --disable-debug \
    --disable-ffplay \
    --disable-doc \
    --disable-network \
    --disable-static
  sed -i -e 's:^HTMLPAGES.*$::' \
         -e 's:^MANPAGES.*$::' \
         -e 's:^PODPAGES.*$::' Makefile
  make
}

