# Based upon the PKGBUILD from Arch Linux
pkgname=ffmpeg
pkgver=20120127
pkgrel=1
pkgdesc="Complete and free Internet live audio and video broadcasting solution for Linux/Unix"
arch=('i686' 'x86_64')
url="http://ffmpeg.org/"
license=('GPL')
depends=('bzip2' 'vo-aacenc' 'lame' 'libvorbis' 'xvidcore' 'zlib' 'x264' 'libtheora'
         'schroedinger' 'speex' 'libvpx' 'rtmpdump')
makedepends=('yasm')
source=(ftp://ftp.archlinux.org/other/ffmpeg/$pkgname-$pkgver.tar.xz)
md5sums=('dc706cdb31801b4746f37459b0c38b7e')

build() {
  cd "${srcdir}/${pkgname}"
  ./configure \
    --prefix=/usr \
    --enable-libmp3lame \
    --enable-libvorbis \
    --enable-libxvid \
    --enable-libx264 \
    --enable-libvo-aacenc \
    --enable-libvpx \
    --enable-libspeex \
    --enable-libtheora \
    --enable-postproc \
    --enable-shared \
    --enable-avfilter \
    --disable-stripping \
    --disable-vdpau \
    --enable-libschroedinger \
    --disable-libfaac \
    --disable-libopencore_amrnb \
    --disable-libopencore_amrwb \
    --disable-libopenjpeg \
    --enable-librtmp \
    --enable-libfreetype \
    --enable-gpl \
    --enable-version3 \
    --enable-runtime-cpudetect \
    --enable-hardcoded-tables \
    --disable-vaapi \
    --disable-indev=oss \
    --disable-indev=jack \
    --disable-indev=dv1394 \
    --disable-indev=v4l \
    --disable-outdev=oss \
    --disable-outdev=alsa \
    --disable-outdev=sdl \
    --disable-debug \
    --disable-ffplay \
    --disable-doc \
    --disable-network \
    --disable-static
  sed -i -e 's:^HTMLPAGES.*$::' \
         -e 's:^MANPAGES.*$::' \
         -e 's:^PODPAGES.*$::' Makefile
  make
}

