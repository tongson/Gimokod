# Based upon the PKGBUILD from Arch Linux
pkgname=ruby
pkgver=1.9.3_p0
pkgrel=1
pkgdesc="An object-oriented language for quick and easy programming"
arch=('i686' 'x86_64')
url="http://www.ruby-lang.org/en/"
license=('BSD' 'custom')
depends=('openssl' 'libffi' 'ncurses' 'zlib')
options=('!emptydirs' '!makeflags')
provides=('rubygems' 'rake')
source=(ftp://ftp.ruby-lang.org/pub/${pkgname}/${pkgver%.*}/${pkgname}-${pkgver//_/-}.tar.bz2)
sha1sums=('f63c116411b981ef54c2caeefb9ccc4d71a5d2cf')

build() {
  cd "${srcdir}/${pkgname}-${pkgver//_/-}"
  PKG_CONFIG=/usr/bin/pkg-config ./configure --prefix=/usr \
                                             --build=${CBUILD} \
                                             --host=${CHOST} \
                                             --sysconfdir=/etc \
                                             --enable-shared \
                                             --enable-pthread \
                                             --enable-ipv6 \
                                             --without-psych \
                                             --disable-debug \
                                             --without-dbm \
                                             --without-gdbm \
                                             --without-tk \
                                             --with-openssl \
                                             --with-curses \
                                             --enable-option-checking=no \
                                             --without-readline \
                                             --disable-socks \
                                             --disable-doc \
                                             --disable-install-doc \
                                             --disable-rpath
  make
}

package() {
  cd "${srcdir}/${pkgbase}-${pkgver//_/-}"
  make DESTDIR="${pkgdir}" install-nodoc
  install -D -m644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
  install -D -m644 BSDL "${pkgdir}/usr/share/licenses/${pkgname}/BSDL"
}

