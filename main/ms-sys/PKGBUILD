# Based upon the PKGBUILD from Arch Linux
pkgname=ms-sys
pkgver=2.2.1
pkgrel=1
pkgdesc="A tool to write Win9x/2k/XP/2k3/Vista/7/2k8 master boot records"
arch=('i686' 'x86_64')
url="http://ms-sys.sourceforge.net/"
license=('GPL')
source=(${pkgname}-${pkgver}.tar.gz::http://sourceforge.net/projects/${pkgname}/files/${pkgname}%20stable/${pkgver}/${pkgname}-${pkgver}.tar.gz/download)
md5sums=('659fb46f1b014abe64ae7d635c5bc1f8')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make PREFIX=/usr MANDIR=/usr/share/man DESTDIR="${pkgdir}" install
}
