pkgname=bti
_pkgname=gregkh-bti
pkgver=032
_pkgver=fabeb14
pkgrel=2
pkgdesc="Console client for Twitter and identi.ca"
arch=('x86_64')
url='http://gregkh.github.com/bti/'
license=('GPL')
depends=('pcre' 'libxml2' 'curl' 'liboauth')
makedepends=('pkg-config' 'libxslt')
source=("${_pkgname}-${pkgver}-0-g${_pkgver}.tar.gz::https://github.com/gregkh/bti/tarball/master")
sha256sums=('18d94b07c9952ac341d748043cf1574ce63c4fad4e621c2fddbee9301fed1b9a')

build() {
  cd "${srcdir}/${_pkgname}-${_pkgver}"
  ./autogen.sh
  ./configure \
    --prefix=/usr \
    --build=${CBUILD} \
    --host=${CHOST} \
    --disable-dependency-tracking
  make
}

package() {
  cd "${srcdir}/${_pkgname}-${_pkgver}"
  make DESTDIR="${pkgdir}" install
}
