pkgname=pax-utils
pkgver=0.2.3
pkgrel=1
pkgdesc="ELF related utils for ELF 32/64 binaries that can check files for security relevant properties"
arch=('i686' 'x86_64')
url="http://hardened.gentoo.org/pax-utils.xml"
license=('GPL')
depends=('libcap')
makedepends=('libcap')
source=(http://dev.gentoo.org/~vapier/dist/${pkgname}-${pkgver}.tar.xz)
sha256sums=('b2cdc20a0c67b78753ff4c4cbaa84b8175b0e2eb926de7390daef34a19297285')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  make CC=gcc USE_CAP=yes
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
}

