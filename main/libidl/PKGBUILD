# Based upon the PKGBUILD from Arch Linux
pkgname=libidl
pkgver=0.8.14
pkgrel=1
pkgdesc="A front-end for CORBA 2.2 IDL and XPIDL"
arch=('i686' 'x86_64')
license=('LGPL')
depends=('glib')
makedepends=('pkg-config' 'bison' 'flex')
options=('!libtool' '!emptydirs')
source=(http://ftp.gnome.org/pub/gnome/sources/libIDL/0.8/libIDL-${pkgver}.tar.bz2)
url="http://www.gnome.org"
sha256sums=('c5d24d8c096546353fbc7cedf208392d5a02afe9d56ebcc1cccb258d7c4d2220')

build() {
  cd "${srcdir}/libIDL-${pkgver}"
  ./configure --prefix=/usr \
              --build=${CBUILD} \
              --host=${CHOST} \
              --disable-static
  make
}

package() {
  cd "${srcdir}/libIDL-${pkgver}"
  make DESTDIR="${pkgdir}" install
}
